[package]
name = "mameuix"
version = "0.1.2"
edition = "2024"

[profile.release]
opt-level = 3
lto = true
codegen-units = 1
strip = true

[dependencies]
eframe = "0.32"
egui = "0.32"
egui_extras = "0.32"  # ADD THIS - needed for optimized table rendering
serde = { version = "1.0.219", features = ["derive"] }
serde_json = "1.0.141"
toml = "0.9.2"
walkdir = "2.5"
dirs = "6.0"
anyhow = "1.0.98"
image = { version = "0.25.6", features = ["png", "jpeg", "ico"] }
rfd = "0.15.4"
rayon = "1.10"
zip = "4.3"
chrono = { version = "0.4.41", features = ["serde"] }
quick-xml = "0.38"
fuzzy-matcher = "0.3.7"
tantivy = "0.22"
regex = "1.11"
lazy_static = "1.5"
# Enhanced GLSL validation dependencies
naga = { version = "26.0", features = ["glsl-in", "glsl-out", "spv-out", "wgsl-out"] }
glsl-lang = { version = "0.8", features = ["serde"] }
glslang = "0.6"
thiserror = "2.0"

[dev-dependencies]
tempfile = "3.20"

